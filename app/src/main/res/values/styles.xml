<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="TodayFragmentExtraInformations" parent="AppTheme">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/standart_margin_padding</item>
        <item name="android:paddingLeft">@dimen/standart_margin_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/wf_list_item_weather_degree_color</item>
    </style>


    <style name="TodayFragmentExtraInformationsLandscape" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/standart_margin_padding</item>
        <item name="android:paddingLeft">@dimen/standart_margin_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="ForecastItemConditionTextStyle">
        <item name="android:textColor">@color/wf_list_item_weather_condition_color</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/standart_margin_padding</item>
    </style>

    <style name="ForecastItemDegreeTextStyle">
        <item name="android:textColor">@color/wf_list_item_weather_degree_color</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">@dimen/standart_margin_padding</item>

    </style>


</resources>
